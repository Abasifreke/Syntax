@{
    ViewBag.Title = "Syntax";
}

<script type="text/javascript">
    function MyFunction() {
        
        var data = {
            focus: $('#Focus').val(),
            context: $('#Context').val()
        };
        $.ajax({
            url: "/Home/AnalyzeText",
            type: "POST",
            dataType: "json",
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function (result) {
                $('#Results')[0].value = result.responseText;
                alert('Success');
            },
            error: function (result) {
                $('#Results')[0].value = result.responseText;
            }
        });
        return false;
    }

</script>

<style>
    .fileUpload {
    position: relative;
    overflow: hidden;
    margin: 0px;
}
.fileUpload input.upload {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    padding: 0;
    font-size: 20px;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
}
</style>

<div class="jumbotron">
    <h1>SYNTAX</h1>

    <p class="lead">SYNTAX is a web-based contextual search application.</p>

    <div class="fileUpload btn btn-primary" action="" method="post" enctype="multipart/form-data">
        <span>Upload .txt File</span>
        <input type="file" class="upload" name="file" id="file" />
    </div>

</div>

<div class="container">
    <h2>Interface</h2>
    <form role="form">
        <div class="form-group">
            <label for="Focus">Focus Word:</label>
            <input type="text" class="form-control" id="Focus" />
        </div>
        <div class="form-group">
            <label for="Context">Text Input:</label>
            <textarea type="text" class="form-control" id="Context"></textarea>
        </div>
        <button type="button" onclick="MyFunction()" class="btn btn-default">Search</button>
    </form>

